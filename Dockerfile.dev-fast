# Ultra-fast development Dockerfile - NO BUILD, NO SLOW OPERATIONS
# syntax=docker/dockerfile:1.4

FROM node:22-alpine

WORKDIR /app

# Install Yarn 4 (Berry) - cache this layer
RUN corepack enable && corepack prepare yarn@4.9.2 --activate

# Install curl for health checks
RUN apk add --no-cache curl

# Copy package files first for better caching
COPY package.json yarn.lock .yarnrc.yml ./
COPY .yarn ./.yarn

# Install dependencies with aggressive caching - NO BUILD
RUN --mount=type=cache,target=/root/.yarn/cache \
    --mount=type=cache,target=/root/.npm \
    yarn install --immutable --network-timeout 600000

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3000 || exit 1

# Start in development mode (will be overridden by docker-compose)
CMD ["yarn", "start:dev"] 