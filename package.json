{
  "name": "soundbite",
  "version": "1.0.0",
  "description": "Serverless audio processing platform with idempotency guarantees",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "build": "tsc",
    "security:scan": "yarn audit --audit-level moderate || true && cd cdk && yarn audit --audit-level moderate || true",
    "docs:update": "node scripts/update-docs.js",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:build": "yarn docs:update && yarn docs:validate",
    "deploy": "cd cdk && npx cdk deploy",
    "deploy:dev": "cd cdk && npx cdk deploy --context environment=dev",
    "deploy:prod": "cd cdk && npx cdk deploy --context environment=prod",
    "destroy": "cd cdk && npx cdk destroy",
    "logs": "aws logs tail /aws/lambda/soundbite-api --follow",
    "health": "curl http://localhost:3000/health"
  },
  "keywords": [
    "audio",
    "processing",
    "serverless",
    "aws",
    "lambda",
    "idempotency",
    "microservices"
  ],
  "author": "SinaVosooghi",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1500.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SinaVosooghi/SoundBite.git"
  },
  "bugs": {
    "url": "https://github.com/SinaVosooghi/SoundBite/issues"
  },
  "homepage": "https://github.com/SinaVosooghi/SoundBite#readme"
}
