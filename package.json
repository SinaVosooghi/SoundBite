{
  "name": "soundbite",
  "version": "1.0.0",
  "description": "Serverless audio processing platform with idempotency guarantees",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
    "test:unit": "jest --testPathIgnorePatterns=e2e",
    "test:all": "yarn test:unit && yarn test:e2e",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "nest build",
    "security:scan": "yarn audit --audit-level moderate || true && cd cdk && yarn audit --audit-level moderate || true",
    "docs:update": "node scripts/update-docs.js",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:build": "yarn docs:update && yarn docs:validate",
    "deploy": "cd cdk && npx cdk deploy",
    "deploy:dev": "cd cdk && npx cdk deploy --context environment=dev",
    "deploy:prod": "cd cdk && npx cdk deploy --context environment=prod",
    "destroy": "cd cdk && npx cdk destroy",
    "logs": "aws logs tail /aws/lambda/soundbite-api --follow",
    "health": "curl http://localhost:3000/health"
  },
  "keywords": [
    "audio",
    "processing",
    "serverless",
    "aws",
    "lambda",
    "idempotency",
    "microservices"
  ],
  "author": "SinaVosooghi",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.848.0",
    "@aws-sdk/client-polly": "^3.848.0",
    "@aws-sdk/client-s3": "^3.850.0",
    "@aws-sdk/client-sqs": "^3.848.0",
    "@aws-sdk/s3-request-presigner": "^3.850.0",
    "@aws-sdk/util-dynamodb": "^3.848.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "aws-lambda": "^1.0.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "@aws-cdk/integ-runner": "^2.189.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/aws-lambda": "^8.10.152",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "aws-cdk": "^2.1023.0",
    "aws-cdk-lib": "^2.206.0",
    "aws-sdk-client-mock": "^4.1.0",
    "cdk-nag": "^2.36.55",
    "constructs": "^10.4.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-util": "^30.0.2",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
